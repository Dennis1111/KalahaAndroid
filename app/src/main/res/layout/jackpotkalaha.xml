<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/board"
    android:gravity="center_vertical">

    <TableRow android:gravity="center_horizontal"
        android:layout_width="10dp">
        <TextView
            android:id="@+id/seeds_textview"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="seeds"
            android:textAppearance="?android:attr/textAppearanceMedium" />
        <Spinner
            android:id="@+id/seeds_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.90"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </TableRow>

    <TableRow android:gravity="center_horizontal">
        <TextView
            android:id="@+id/computer_skill_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="skill"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <Spinner
            android:id="@+id/computer_skill_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.90" />
    </TableRow>

    <TableRow android:gravity="center_horizontal">
        <TextView
            android:id="@+id/who_begins_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Who begins"
            android:textAppearance="?android:attr/textAppearance" />

        <Spinner
            android:id="@+id/who_begins_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.90" />
    </TableRow>

    <TableRow android:gravity="center_horizontal"
        android:layout_width="30dp">

        <Button
            android:id="@+id/start"
            style="@style/Widget.AppCompat.Button.Small"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:alpha="0.90"
            android:onClick="onClickStartGame"
            android:text="Play" />

        <Button
            android:id="@+id/kalaha_tutorial"
            style="@style/Widget.AppCompat.Button.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.90"
            android:onClick="onClickStartTutorial"
            android:text="Tutorial" />
    </TableRow>
</TableLayout>
